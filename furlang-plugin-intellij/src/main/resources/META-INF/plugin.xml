<idea-plugin>
    <id>${pluginId}</id>
    <name>${pluginName}</name>
    <description>Plugin for the Furlang toy language, developed by Cach30verfl0w</description>
    <vendor email="${vendorEmail}" url="${vendorUrl}">${vendorName}</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Furlang" language="Furlang" implementationClass="de.cacheoverflow.furlang.plugin.intellij.source.FurlangSourceFileType" extensions="arf" />
        <lang.parserDefinition language="Furlang" implementationClass="de.cacheoverflow.furlang.plugin.intellij.source.SourceParserDefinition" />
        <lang.syntaxHighlighter language="Furlang" implementationClass="de.cacheoverflow.furlang.plugin.intellij.source.SourceSyntaxHighlighter" />
        <colorSettingsPage implementation="de.cacheoverflow.furlang.plugin.intellij.source.SourceColorSettingsPage" />
    </extensions>
</idea-plugin>
